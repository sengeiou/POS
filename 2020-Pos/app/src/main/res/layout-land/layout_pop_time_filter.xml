<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="402dp"
        android:elevation="6dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_radius10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/select_time_period_query"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/commonly_used"
                android:textColor="@color/thirdTextColor"
                android:textSize="@dimen/secondaryContentTextSize" />

            <RadioGroup
                android:id="@+id/rgTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <RadioButton
                    android:button="@null"
                    android:id="@+id/rbTime1"
                    style="@style/RadioButtonTime"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/current_month" />

                <RadioButton
                    android:button="@null"
                    android:id="@+id/rbTime2"
                    style="@style/RadioButtonTime"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/last_month_win" />

                <RadioButton
                    android:button="@null"
                    android:id="@+id/rbTime3"
                    style="@style/RadioButtonTime"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/nearly_two_months" />

                <RadioButton
                    android:button="@null"
                    android:id="@+id/rbTime4"
                    style="@style/RadioButtonTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/nearly_three_months" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/period"
                android:textColor="@color/thirdTextColor"
                android:textSize="@dimen/secondaryContentTextSize" />

            <RadioGroup
                android:id="@+id/rgStartEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:button="@null"
                    android:id="@+id/rbStartTime"
                    style="@style/RadioWhiteButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/start_time"
                    android:textColor="@color/secondaryTextColor" />

                <View
                    android:layout_width="11dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/gray_999999" />

                <RadioButton
                    android:button="@null"
                    android:id="@+id/rbEndTime"
                    style="@style/RadioWhiteButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/end_time"
                    android:textColor="@color/secondaryTextColor" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reset"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/contentTextSize"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <TextView
                android:id="@+id/btnSure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_confirm"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/contentTextSize"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


