<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <View
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_half_radius5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/black_323332"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址:深圳市 "
            android:textSize="@dimen/text_size_14" />
        <TextView
            android:textColor="@color/black_323332"
            android:textSize="@dimen/text_size_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="经度" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/gray_d7d8da"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/tv_dialog_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经度" />
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/blue_68a0f4"
                android:textSize="@dimen/text_size_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改为" />
            <TextView
                android:layout_alignParentEnd="true"
                android:textColor="@color/black_494959"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/tv_dialog_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经度" />
        </RelativeLayout>
        <TextView
            android:textColor="@color/black_323332"
            android:textSize="@dimen/text_size_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="纬度" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/gray_d7d8da"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/tv_dialog_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经度" />
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/blue_68a0f4"
                android:textSize="@dimen/text_size_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改为" />
            <TextView
                android:layout_alignParentEnd="true"
                android:textColor="@color/black_494959"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/tv_dialog_content4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经度" />
        </RelativeLayout>
        <View
            android:layout_marginTop="25dp"
            android:background="@color/gray_f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:textColor="@color/gray_86868c"
                android:background="@color/white"
                android:id="@+id/bt_dialog_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/text_size_13" />
            <Button
                android:background="@color/white"
                android:textColor="@color/blue_7f63f9"
                android:id="@+id/bt_dialog_confirm"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="确认"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
