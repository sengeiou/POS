<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_select_photo"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPopCancel"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_dialog_cancel"
            android:layout_alignParentLeft="true"
            android:textColor="@color/mainTextColor"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tvPopTitle"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_id_title"
            android:layout_centerInParent="true"
            android:textColor="@color/mainTextColor"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tvPopRight"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/edit_person_save"
            android:textColor="@color/main_50"
            android:textSize="14sp"
            />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/lineColor"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvName"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/store_name"
            android:maxLines="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mainTextColor"/>

        <LinearLayout
            android:id="@+id/llModify"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/tvInput"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pls_input"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/mainTextColor"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"/>
</LinearLayout>