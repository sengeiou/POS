<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <RelativeLayout
        android:layout_toStartOf="@+id/ivMore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border_gray_radius2">

        <com.epro.pos.ui.view.ClearableEditText
            android:id="@+id/etBarCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/ivScan"
            android:background="@null"
            android:hint="@string/enter_product_barcode"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/thirdTextColor"
            android:textSize="@dimen/secondaryContentTextSize"
            app:clearIcon="@mipmap/icon_delete" />
        <ImageView
            android:id="@+id/ivScan"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@mipmap/sweep_code" />
    </RelativeLayout>
    <ImageView
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/ivMore"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/more"
        android:layout_width="36dp"
        android:layout_height="36dp" />
</RelativeLayout>


