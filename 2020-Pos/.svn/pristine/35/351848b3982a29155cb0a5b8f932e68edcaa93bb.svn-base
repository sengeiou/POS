<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottomColor"
    android:orientation="horizontal">
   <LinearLayout
       android:paddingLeft="12dp"
       android:paddingEnd="12dp"
       android:background="@color/blue"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_gravity="center"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/amount_to_be_refunded_point"
              android:textColor="@color/mainTextColor"
              android:textSize="20sp"
              />
          <TextView
              android:id="@+id/shouldMoney"
              android:layout_alignParentEnd="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="HK$12.10"
              android:textColor="@color/mainColor"
              android:textSize="20sp"
              />
      </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/refunded_amount_point"
               android:textColor="@color/mainTextColor"
               android:textSize="20sp"
               />
           <TextView
               android:layout_alignParentEnd="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="HK$12.10"
               android:textColor="@color/mainTextColor"
               android:textStyle="bold"
               android:textSize="20sp"
               />
       </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1.5"
           android:gravity="center_vertical"
           >
           <TextView
               android:id="@+id/tvRemarks"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/remark_point"
               android:textColor="@color/mainTextColor"
               android:textSize="20sp" />

           <EditText
               android:id="@+id/sayET"
               android:layout_marginLeft="12dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint=""
               android:textColor="@color/mainTextColor"
               android:textSize="13sp"
               android:background="@null"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center_vertical"
           >
           <Button
               android:id="@+id/btnDiscount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/discount"
               android:textColor="@color/mainTextColor"
               android:textSize="20sp" />

           <Button
               android:id="@+id/btnAllCancel"
               android:layout_marginLeft="12dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/cancel_the_entire_order"
               android:textColor="@color/mainTextColor"
               android:textSize="20sp"
               />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:background="@color/blue"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCash"
                style="@style/PayButton"
                android:text="@string/cash_money" />
            <Button
                android:id="@+id/btnOctopus"
                style="@style/PayButton"
                android:text="@string/octopus" />
            <Button
                android:id="@+id/btnBankCard"
                style="@style/PayButton"
                android:text="@string/bank_card" />
            <Button
                android:id="@+id/btnVISA"
                style="@style/PayButton"
                android:text="VISA" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnApplePay"
                style="@style/PayButton"
                android:text="ApplePay" />
            <Button
                android:id="@+id/btnChat"
                style="@style/PayButton"
                android:text="@string/weixin" />
            <Button
                android:id="@+id/btnAlipay"
                style="@style/PayButton"
                android:text="@string/zfb_sale_count" />
            <Button
                android:id="@+id/btnEPS"
                style="@style/PayButton"
                android:text="EPS" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv100"
                style="@style/PayButton"
                android:textColor="@color/mainColor"
                android:text="HS$100" />
            <TextView
                android:id="@+id/tv50"
                style="@style/PayButton"
                android:textColor="@color/mainColor"
                android:text="HS$50" />
            <TextView
                android:id="@+id/tv20"
                style="@style/PayButton"
                android:textColor="@color/mainColor"
                android:text="HS$20" />
            <TextView
                android:id="@+id/tv10"
                style="@style/PayButton"
                android:textColor="@color/mainColor"
                android:text="HS$10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etMoney"
                android:paddingLeft="12dp"
                style="@style/PayButton"
                android:gravity="start|center"
                android:text="HS$100" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/calc7"
                style="@style/PayButton"
                android:text="7" />
            <Button
                android:id="@+id/calc8"
                style="@style/PayButton"
                android:text="8" />
            <Button
                android:id="@+id/calc9"
                style="@style/PayButton"
                android:text="9" />
            <Button
                android:id="@+id/calcBack"
                style="@style/PayButton"
                 android:text="@string/come_back" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/calc4"
                style="@style/PayButton"
                android:text="4" />
            <Button
                android:id="@+id/calc5"
                style="@style/PayButton"
                android:text="5" />
            <Button
                android:id="@+id/calc6"
                style="@style/PayButton"
                android:text="6" />
            <Button
                android:id="@+id/calcCancel"
                style="@style/PayButton"
                android:text="@string/cancel" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/calc1"
                    style="@style/PayButton"
                    android:text="1" />
                <Button
                    android:id="@+id/calc2"
                    style="@style/PayButton"
                    android:text="2" />
                <Button
                    android:id="@+id/calc3"
                    style="@style/PayButton"
                    android:text="3" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/calc00"
                    style="@style/PayButton"
                    android:text="00" />
                <Button
                    android:id="@+id/calc0"
                    style="@style/PayButton"
                    android:text="0" />
                <Button
                    android:id="@+id/calcPoint"
                    style="@style/PayButton"
                    android:text="." />

            </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/calcConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue"
                        android:text="@string/confirm"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>