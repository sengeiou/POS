<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_white_bg_radius5"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
           android:id="@+id/llLeft"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/water_consumption"
                android:textColor="@color/black_323332"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="2019"
                android:textColor="@color/gray_a7a6a6"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_triangle"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
</LinearLayout>



