<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.epro.pos.ui.view.CustomSpinner
                android:id="@+id/csTradeType"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                app:custom_sp_hint="@string/transaction_type" />

            <com.epro.pos.ui.view.CustomSpinner
                android:id="@+id/csOrderType"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                app:custom_sp_hint="@string/order_type" />

            <com.epro.pos.ui.view.CustomSpinner
                android:id="@+id/csPayType"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                app:custom_sp_hint="@string/payment_method" />

            <com.epro.pos.ui.view.CustomSpinner
                android:id="@+id/csGoodsCategorys"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:custom_sp_hint="@string/product_category" />

            <com.epro.pos.ui.view.CustomSpinner
                android:id="@+id/csOrderStatus"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                app:custom_sp_hint="@string/order_status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <com.epro.pos.ui.view.CustomSpinner
                android:id="@+id/csCashier"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                app:custom_sp_hint="@string/cashier_no_point" />

            <com.epro.pos.ui.view.ClearableEditText
                android:id="@+id/etCustomer"
                style="@style/FilterEditText"
                android:layout_width="0dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:hint="@string/customer_id" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnReset"
                    style="@style/WhiteButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:text="@string/reset" />

                <TextView
                    android:id="@+id/btnSure"
                    style="@style/RedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dailog_confirm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

