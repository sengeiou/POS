<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rlFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="20dp"
                android:id="@+id/tvDistribution"
                style="@style/WhiteButton2"
                android:layout_height="32dp"
                android:text="@string/arrange_delivery" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <com.epro.pos.ui.view.CustomTimerPicker
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                android:id="@+id/customTimerPicker"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>
            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="32dp">
                <com.epro.pos.ui.view.CustomSearchView
                    android:id="@+id/onlineOrderSearchView"
                    app:custom_sv_hint="@string/pls_input_phone_num_search"
                    android:layout_width="340dp"
                    android:layout_height="32dp"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/vCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
