<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_whole_radius4"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="11dp"
        android:paddingRight="16dp"
        >
        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="@color/thirdTextColor"
            android:text="@string/serial_no"
            />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_to_do"
            android:textSize="12sp"
            android:textColor="@color/mainColor"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"/>
    <TextView
        android:layout_marginTop="11dp"
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/thirdTextColor"
        android:textSize="14sp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingRight="16dp"
        >
        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expand"
            android:textSize="@dimen/text_size_12"
            android:textColor="#3E81E3"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/tvDetail"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:text="@string/see_detail"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_detail_see"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="#3E81E3"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>